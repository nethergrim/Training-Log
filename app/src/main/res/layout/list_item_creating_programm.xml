<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageButton
        android:id="@+id/btnDown"
        android:src="@drawable/ic_down"
        android:background="@color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_margin="4dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btnUp"
        android:background="@color/transparent"
        android:src="@drawable/ic_up"
        android:layout_toRightOf="@+id/btnDown"
        android:layout_margin="4dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.nethergrim.combogymdiary.view.TextViewLight
        android:id="@+id/text_exercise"
        android:textSize="16sp"
        android:gravity="center_vertical|start"
        android:layout_toRightOf="@+id/btnUp"
        android:layout_toLeftOf="@+id/imageSuperset"
        android:layout_margin="4dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageSuperset"
        android:layout_toLeftOf="@+id/text_number_of_superset"
        android:layout_margin="4dp"
        android:src="@drawable/ic_btn_ss"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.nethergrim.combogymdiary.view.TextViewLight
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="4dp"
        android:textSize="16sp"
        android:text="1"
        android:id="@+id/text_number_of_superset"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent" />


</RelativeLayout>